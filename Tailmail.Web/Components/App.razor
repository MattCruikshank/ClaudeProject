<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Tailmail.Web.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script>
        window.scrollToBottom = function(element) {
            element.scrollIntoView({ behavior: 'smooth', block: 'end' });
        };

        window.setupEnterKeyHandler = function(textarea, dotNetHelper) {
            textarea.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    var message = textarea.value;
                    textarea.value = '';
                    dotNetHelper.invokeMethodAsync('OnEnterPressed', message);
                }
            });
        };

        window.getTextareaValue = function(textarea) {
            return textarea.value;
        };

        window.clearTextarea = function(textarea) {
            textarea.value = '';
        };

        window.focusElement = function(element) {
            element.focus();
        };

        window.setupNavigationKeys = function(dotNetHelper) {
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && (e.key === 'ArrowUp' || e.key === 'ArrowDown')) {
                    e.preventDefault();
                    dotNetHelper.invokeMethodAsync('OnNavigationKey', e.key === 'ArrowUp');
                }
            });
        };
    </script>
</body>

</html>
